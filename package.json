    "lodash": "^4.17.5",
    "pretty-time": "~1.1.0",
    "refine-deep": "^1.0.1",
    "rxjs": "^6.3.3"
  },
  "devDependencies": {
    "@ikscodes/tslint-config": "^5.3.1",
    "@types/chalk": "^2.2.0",
    "@types/ejs": "^2.5.0",
    "@types/fs-extra": "^5.0.1",
