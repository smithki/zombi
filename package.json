  "author": {
    "name": "Ian K Smith",
    "email": "smithki707@gmail.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://gitlab.com/smithki/zombi"
  },
  "files": [
    "dist",
    "template",
    "generators.js",
    "generators.d.ts",
    "zombi.js",
    "zombi.d.ts"
  ],
  "main": "./zombi.js",
  "types": "./zombi.d.ts",
  "scripts": {
    "clean": "rimraf ./dist",
    "dev": "npm-run-all -s clean compile_watch",
