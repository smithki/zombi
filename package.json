{
  "private": true,
  "name": "zombi-ecosystem",
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "exec": "lerna exec --scope \"$PKG\" -- $@",
    "dev": "lerna exec --scope \"$PKG\" -- yarn dev",
    "build": "lerna exec --scope \"$PKG\" -- yarn build",
    "test": "lerna exec --scope \"$PKG\" -- yarn test",
    "test_watch": "lerna exec --scope \"$PKG\" -- yarn test_watch",
    "lint": "lerna exec --scope \"$PKG\" -- yarn lint",
    "clean": "lerna exec --scope \"$PKG\" -- yarn clean",
    "clean_node_modules": "lerna exec -- rimraf node_modules && rimraf node_modules",
    "precommit": "lint-staged"
  },
  "devDependencies": {
    "@ikscodes/tslint-config": "^5.3.1",
    "@types/caller": "^1.0.0",
    "@types/chalk": "^2.2.0",
    "@types/ejs": "^2.5.0",
    "@types/fs-extra": "^5.0.1",
    "@types/inquirer": "0.0.36",
    "@types/listr": "^0.14.2",
    "@types/lodash": "^4.14.104",
    "@types/node": "^9.4.6",
    "@types/pretty-time": "^1.1.0",
    "husky": "^0.14.3",
    "lerna": "^3.16.4",
    "lint-staged": "~7.3.0",
    "npm-run-all": "~4.1.2",
    "prettier": "^1.15.3",
    "rimraf": "^2.6.2",
    "tslint": "^5.12.0",
    "typescript": "^3.6.4"
  },
  "lint-staged": {
    "*.ts": [
      "tslint --fix",
      "git add"
    ]
  },
  "workspaces": [
    "packages/*"
  ]
}
