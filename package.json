{
  "name": "zombi",
  "version": "0.12.0",
  "description": "Dead simple, streaming scaffolding for people with braaains.",
  "author": {
    "name": "Ian K Smith",
    "email": "smithki707@gmail.com"
  },
  "license": "MIT",
  "repository": "github:o3-studio/zombi",
  "files": [
    "dist",
    "template",
    "generators.js",
    "generators.d.ts",
    "index.js",
    "index.d.ts"
  ],
  "main": "./index.js",
  "types": "./index.d.ts",
  "scripts": {
    "clean": "npm-run-all clean:*",
    "clean:dist": "rimraf ./dist",
    "clean:cache": "rimraf .rts2_cache_*",
    "dev": "npm-run-all -s clean:dist -p compile_watch:*",
    "build": "npm-run-all -s clean:dist -p compile:*",
    "compile:zombi": "microbundle build src/index.ts --format cjs",
    "compile_watch:zombi": "microbundle watch src/index.ts --format cjs",
    "compile:generators": "microbundle build src/generators/index.ts --format cjs --output generators",
    "compile_watch:generators": "microbundle watch src/generators/index.ts --format cjs --output generators",
    "lint": "tslint --project ./tsconfig.json",
    "precommit": "lint-staged && npm run docs"
  },
  "lint-staged": {
    "*.ts": [
      "tslint --fix",
      "git add"
    ]
  },
  "dependencies": {
    "caller": "~1.0.1",
    "chalk": "^2.4.1",
    "ejs": "^2.5.7",
    "fs-extra": "^5.0.0",
    "ini": "~1.3.5",
    "inquirer": "^5.1.0",
    "lodash": "^4.17.5",
    "pretty-time": "~1.1.0",
    "rxjs": "^6.3.3"
  },
  "devDependencies": {
    "@ikscodes/tslint-config": "^5.3.1",
    "@types/chalk": "^2.2.0",
    "@types/ejs": "^2.5.0",
    "@types/fs-extra": "^5.0.1",
    "@types/inquirer": "0.0.36",
    "@types/lodash": "^4.14.104",
    "@types/node": "^9.4.6",
    "husky": "^0.14.3",
    "lint-staged": "~7.3.0",
    "microbundle": "^0.9.0",
    "npm-run-all": "~4.1.2",
    "prettier": "^1.15.3",
    "rimraf": "^2.6.2",
    "tslint": "^5.12.0",
    "typescript": "^3.2.2"
  }
}
